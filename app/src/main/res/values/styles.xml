<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="popupMenuStyle">@style/CustomMenu</item>
        <item name="android:itemBackground">@color/google_red</item>
    </style>


    <style name="SemiboldText" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/inter_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundedSmall">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
    </style>

    <style name="roundedSmallWhite">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
        <item name="backgroundTint">@color/white_semitransparent</item>
    </style>

    <style name="Widget.MaterialComponents.Button.TextButton.Black" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/gray_light</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/gray_light</item>
        <item name="android:textCursorDrawable">@color/gray_font</item>
        <item name="cursorColor">@color/gray_font</item>
        <item name="boxStrokeColor">@color/gray_font</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="TextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="AppMaterialButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/material_button_disabled</item>
    </style>

    <style name="MaterialButton.Disabled" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/gray_font</item>
    </style>

    <style name="MaterialButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MaterialButton.Transparent.Disabled" parent="Widget.Material3.Button.TextButton">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/gray_font</item>
    </style>

    <style name="MaterialButton.Transparent" parent="Widget.Material3.Button.TextButton">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button.DatePicker" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:background">@drawable/button_rounded_border</item>
        <item name="android:backgroundTint">@color/gray_light</item>
        <item name="strokeColor">@color/gray_light</item>

        <item name="android:textColorHint">@color/gray_light</item>
        <item name="android:textCursorDrawable">@color/gray_font</item>
        <item name="cursorColor">@color/gray_font</item>
        <item name="boxStrokeColor">@color/gray_font</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="CustomMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/white</item>
    </style>
</resources>